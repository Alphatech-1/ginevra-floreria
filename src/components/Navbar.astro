  .nav-link.active .nav-underline {
    width: 40px;
    transform: translateX(-50%) scaleX(1);
  }
  
  /* Animaciones para el menú móvil */
  .mobile-menu-open {
    opacity: 1 !important;
    transform: scaleY(1) translateY(0) !important;
  }
  
  /* Animación para el botón hamburguesa */
  .hamburger-active svg {
    transform: rotate(90deg);
  }
  
  .hamburger-active path:nth-child(1),
  .hamburger-active path:nth-child(3) {
    transform-origin: center;
  }
</style>

<script>
  // Control del menú móvil
  document.addEventListener('DOMContentLoaded', function() {
    const mobileMenuButton = document.getElementById('mobile-menu-button');
    const mobileMenu = document.getElementById('mobile-menu');
    const mobileLinks = document.querySelectorAll('.mobile-nav-link');
    const desktopLinks = document.querySelectorAll('.nav-link');
    
    if (!mobileMenuButton || !mobileMenu) return;
    
    // Toggle del menú móvil
    mobileMenuButton.addEventListener('click', function() {
      mobileMenu.classList.toggle('mobile-menu-open');
      mobileMenuButton.classList.toggle('hamburger-active');
    });
    
    // Cerrar menú al hacer clic en un enlace móvil
    mobileLinks.forEach(link => {
      link.addEventListener('click', () => {
        mobileMenu.classList.remove('mobile-menu-open');
        mobileMenuButton.classList.remove('hamburger-active');
        
        // Marcar como activo
        desktopLinks.forEach(dLink => dLink.classList.remove('active'));
        link.classList.add('active');
      });
    });
    
    // Marcar enlaces activos en desktop
    desktopLinks.forEach(link => {
      link.addEventListener('click', () => {
        desktopLinks.forEach(dLink => dLink.classList.remove('active'));
        link.classList.add('active');
      });
    });
    
    // Cerrar menú al hacer clic fuera
    document.addEventListener('click', function(event) {
      if (!mobileMenu.contains(event.target as Node) && !mobileMenuButton.contains(event.target as Node)) {
        mobileMenu.classList.remove('mobile-menu-open');
        mobileMenuButton.classList.remove('hamburger-active');
      }
    });
    
    // Cerrar menú con ESC
    document.addEventListener('keydown', function(event) {
      if (event.key === 'Escape') {
        mobileMenu.classList.remove('mobile-menu-open');
        mobileMenuButton.classList.remove('hamburger-active');
      }
    });
  });
</script>